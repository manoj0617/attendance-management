<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geethanjali</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="icon" href="https://res.cloudinary.com/drqpxfysj/image/upload/v1716745016/logo_cxgllm.jpg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        :root {
            --header-bg-color: #d0cede; /* Mischka */
            --header-text-color: #12047a; /* Deep Blue */
        }

        body {
            background-color: var(--header-bg-color); /* Set body background to Mischka */
            padding: 2rem;
        }

        .heading {
            background-color: white;
            color: var(--header-text-color);
            border-radius: 0.5rem;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .heading img {
            max-height: 40px; /* Increased from 40px to 60px */
            margin-right: 15px;
        }

        .heading a {
            text-decoration: none;
            color: var(--header-text-color);
            font-size: 1.5rem;
            font-weight: bold;
        }

        .offcanvas-logo {
            max-height: 40px; /* Increased from 30px to 50px */
        }

        .nav-element {
            margin: 10px 0;
        }

        .nav-element a {
            text-decoration: none;
            font-weight: 500;
            font-size: 1.2rem;
            color: var(--header-text-color);
        }

        .offcanvas-body {
            padding-left: 20px;
        }

        .offcanvas-header {
            background-color: white; /* Changed to white */
            color: var(--header-text-color);
        }

        .btn.nav-btn {
            color: var(--header-text-color);
        }

        .btn-close {
            color: var(--header-text-color);
        }

        /* New styles for consistent heading in navbar */
        .offcanvas-header .offcanvas-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--header-text-color);
            text-decoration: none;
        }
    </style>
</head>

<body>
    <!-- Header with Geethanjali Logo -->
    <h1 class="heading shadow">
        <button class="btn nav-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample"
            aria-controls="offcanvasExample">
            <i class="fas fa-bars" style="font-size: x-large;"></i>
        </button>
        <img src="/css/geethanjali.png"  alt="Geethanjali Logo">
    </h1>

    <!-- Offcanvas Navigation -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header d-flex align-items-center">
            <div class="d-flex align-items-center">
                <img src="/css/geethanjali.png" alt="Geethanjali Logo" class="offcanvas-logo me-2">
            </div>
            <button type="button" class="btn-close text-reset ms-auto" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="nav-element">
                <a href="/admin/dashboard">Dashboard</a>
            </div>
            <div class="nav-element">
                <a href="/admin/section">Section</a>
            </div>
            <div class="nav-element">
                <a href="/admin/student">Student</a>
            </div>
            <div class="nav-element">
                <a href="/admin/faculty">Faculty</a>
            </div>
            <div class="nav-element">
                <a href="/admin/attendance">Attendance</a>
            </div>
            <div class="nav-element">
                <a href="/admin/timetable">Time Table</a>
            </div>
            <div class="nav-element">
                <a href="/admin/subjects">Subjects</a>
            </div>
            <div class="nav-element">
                <a href="/admin/email">Send Email</a>
            </div>
            <div class="nav-element">
                <a href="/admin/resources">Resources</a>
            </div>
            <div class="nav-element">
                <a href="/admin/semesters">Semesters</a>
            </div>
            <div class="nav-element">
                <a href="/admin/branches">Branches</a>
            </div>
            <div class="nav-element">
                <a href="/admin/academic-years">Academic Year</a>
            </div>
            <div class="nav-element">
                <a href="/admin/regulations">Regulations</a>
            </div>
            <div class="nav-element">
                <a href="/admin/forms">forms</a>
            </div>
            <div class="nav-element">
                <a href="/admin/templates">templates</a>
            </div>
            <div class="nav-element">
                <a href="/admin/logout">Logout</a>
            </div>
        </div>
    </div>

    <%-body %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
    <script src="/js/script.js"></script>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>

</html>