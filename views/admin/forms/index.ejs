<%- layout("../layouts/adminBoilerplate") -%>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
<style>
    :root {
        --bs-primary: #12047a;
        --bs-secondary: #6c679c;
        --bs-success: #28a745;
        --bs-info: #8c8cb4;
        --bs-warning: #ffc107;
        --bs-danger: #dc3545;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        color: #495057;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table tbody tr {
        transition: background-color 0.2s;
    }

    .table tbody tr:hover {
        background-color: rgba(108, 103, 156, 0.05);
    }

    .badge {
        padding: 0.5em 1em;
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .badge-draft {
        background-color: #6c757d;
    }

    .badge-active {
        background-color: #28a745;
    }

    .badge-expired {
        background-color: #dc3545;
    }

    .btn-create {
        background: linear-gradient(135deg, #3c2c94 0%, #12047a 100%);
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: transform 0.2s;
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .feedback-type {
        font-size: 0.85rem;
        padding: 0.35em 0.8em;
        border-radius: 20px;
        background-color: #8c8cb4;
        color: white;
        display: inline-block;
        margin: 0.2rem;
    }

    .action-buttons a, .action-buttons button {
        padding: 0.4rem 0.8rem;
        font-size: 0.9rem;
        color: #495057;
        text-decoration: none;
        transition: color 0.2s;
    }

    .action-buttons a:hover {
        color: #12047a;
    }

    .empty-state {
        padding: 4rem 2rem;
        text-align: center;
    }

    .empty-state i {
        font-size: 3rem;
        color: #6c679c;
        margin-bottom: 1rem;
    }
    
    .page-title-wrapper {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 1.5rem 0;
        margin-bottom: 1.5rem;
        border-radius: 10px;
    }
</style>

<div class="container-fluid">
    <!-- Page Title Section -->
    <div class="page-title-wrapper mb-4">
        <div class="d-flex justify-content-between align-items-center px-3">
            <h2 class="h4 mb-0 text-primary">Feedback Forms</h2>
            <a href="/admin/forms/new" class="btn btn-create text-white">
                <i class="fas fa-plus-circle me-2"></i>Create New Form
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="card">
        <div class="card-body p-0">
            <% if (forms && forms.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th class="ps-4">Title</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Duration</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% forms.forEach(form => { %>
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-semibold mb-1"><%= form.title %></div>
                                        <div class="text-muted small"><%= form.description %></div>
                                    </td>
                                    <td>
                                        <% form.feedbackTypes.forEach(type => { %>
                                            <span class="feedback-type">
                                                <%= type.replace('_', ' ') %>
                                            </span>
                                        <% }) %>
                                    </td>
                                    <td>
                                        <span class="badge <%= form.status === 'Active' ? 'badge-active' : 
                                                              form.status === 'Draft' ? 'badge-draft' : 
                                                              'badge-expired' %>">
                                            <%= form.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <i class="far fa-calendar-alt me-2"></i>
                                            <%= new Date(form.startDate).toLocaleDateString() %> - 
                                            <%= new Date(form.endDate).toLocaleDateString() %>
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="action-buttons">
                                            <a href="/admin/forms/<%= form._id %>" class="btn btn-link">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                            <a href="/admin/forms/<%= form._id %>/edit" class="btn btn-link">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <% if (form.status === 'Draft') { %>
                                                <form action="/admin/forms/<%= form._id %>/delete" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-link text-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this form?')">
                                                        <i class="fas fa-trash-alt me-1"></i>Delete
                                                    </button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-clipboard-list mb-4"></i>
                    <h3 class="text-secondary mb-3">No Feedback Forms Yet</h3>
                    <p class="text-muted mb-4">Create your first feedback form to get started with collecting valuable insights.</p>
                    <a href="/admin/forms/new" class="btn btn-create text-white">
                        <i class="fas fa-plus-circle me-2"></i>Create First Form
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>