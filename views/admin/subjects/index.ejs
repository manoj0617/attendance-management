<% layout("../layouts/adminBoilerplate") -%>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Subjects</h1>

        <!-- Search Form -->
        <form action="/admin/subjects" method="GET" class="form-inline mb-4">
            <input type="text" name="search" class="form-control mr-2" placeholder="Search by subject name or code" value="<%= searchTerm %>">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        <!-- Create New Subject Button -->
        <a href="/admin/subjects/new" class="btn btn-success mb-3">Create New Subject</a>

        <!-- Subjects List -->
        <ul class="list-group">
            <% subjects.forEach(subject => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5><%= subject.name %> (<%= subject.full_name %>)</h5>
                        <p>Code: <%= subject.code %></p>
                        <% if (subject.academicYear) { %>
                            <p>Academic Year: <%= subject.academicYear.name %></p>
                        <% } %>
                        <% if (subject.semester) { %>
                            <p>Semester: <%= subject.semester.name %></p>
                        <% } %>
                    </div>
                    <div>
                        <a href="/admin/subjects/<%= subject._id %>/edit" class="btn btn-info mr-2">Edit</a>
                        <form action="/admin/subjects/<%= subject._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                <% if (hasPreviousPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= previousPage %>&search=<%= searchTerm %>">Previous</a>
                    </li>
                <% } %>
                <% if (hasNextPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= nextPage %>&search=<%= searchTerm %>">Next</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
</body>
