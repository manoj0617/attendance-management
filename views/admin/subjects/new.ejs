<% layout("../layouts/adminBoilerplate") -%>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Create New Subject</h1>
    <form action="/admin/subjects" method="POST" class="needs-validation" novalidate>
      <div class="row">
        <!-- Subject Type -->
        <div class="form-group col-md-6 mt-3">
          <label for="type" class="form-label">Subject Type:</label>
          <select name="type" id="type" class="form-select" required>
            <option value="" selected>Select Subject Type</option>
            <option value="Theory">Theory</option>
            <option value="Lab">Lab</option>
            <option value="Non-Academic">Non-Academic</option>
          </select>
          <div class="invalid-feedback">Please select a subject type.</div>
        </div>

        <!-- Subject Short Name -->
        <div class="form-group col-md-6 mt-3">
          <label for="name" class="form-label">Subject Short Name:</label>
          <input type="text" name="name" id="name" class="form-control" required>
          <div class="invalid-feedback">Please enter the subject short name.</div>
        </div>
      </div>

      <div class="row">
        <!-- Subject Full Name -->
        <div class="form-group col-md-6 mt-3">
          <label for="full_name" class="form-label">Subject Full Name:</label>
          <input type="text" name="full_name" id="full_name" class="form-control" required>
          <div class="invalid-feedback">Please enter the subject full name.</div>
        </div>

        <!-- Subject Code -->
        <div class="form-group col-md-6 mt-3">
          <label for="code" class="form-label">Subject Code:</label>
          <input type="text" name="code" id="code" class="form-control">
        </div>
      </div>

      <div class="row">
        <!-- Semester -->
        <div class="form-group col-md-6 mt-3">
          <label for="semester" class="form-label">Semester:</label>
          <select name="semester" id="semester" class="form-select">
            <option value="" selected>Select Semester</option>
            <% semesters.forEach(sem => { %>
              <option value="<%= sem._id %>"><%= sem.name %></option>
            <% }) %>
          </select>
        </div>

        <!-- Regulation -->
        <div class="form-group col-md-6 mt-3">
          <label for="regulation" class="form-label">Regulation:</label>
          <select name="regulation" id="regulation" class="form-select">
            <option value="" selected>Select Regulation</option>
            <% regulations.forEach(reg => { %>
              <option value="<%= reg._id %>"><%= reg.regulation %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Credits -->
      <div class="form-group mt-3">
        <label for="credits" class="form-label">Credits:</label>
        <input type="number" name="credits" id="credits" class="form-control" min="0">
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary mt-4 w-100">Create Subject</button>
    </form>
  </div>

  <script>
    // Bootstrap form validation
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        const forms = document.getElementsByClassName('needs-validation');
        Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
  </script>
</body>
