<% layout("../layouts/adminBoilerplate") -%>
<body>
    <div class="container mt-5">
        <h1>Student Details</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= student.name %></h5>
                <p class="card-text"><strong>Roll No:</strong> <%= student.username %></p>
                <p class="card-text"><strong>Email:</strong> <%= student.email %></p>
                <p class="card-text"><strong>Department:</strong> <%= student.dept %></p>
                <p class="card-text"><strong>Year:</strong> <%= student.year %></p>
                <p class="card-text"><strong>Gender:</strong> <%= student.gender %></p>
                <p class="card-text"><strong>Section:</strong> <%= student.section ? student.section.name : 'Not assigned' %></p>
            </div>
            <div class="card-footer">
                <a href="/admin/student/<%= student._id %>/edit" class="btn btn-warning">Edit</a>
                <form method="post" action="/admin/student/<%= student._id %>?_method=DELETE" class="d-inline" onsubmit="return confirmDeletion(event)">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a href="/admin/student" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <script>
        function confirmDeletion(event) {
            if (!confirm('Are you sure you want to delete this student?')) {
                event.preventDefault();
            }
        }
    </script>
</body>
</html>
