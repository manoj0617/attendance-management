<% layout("../layouts/boilerplate") -%>

<body style="height: 100vh; width: 100%;">
    <!-- Main Container -->
    <div class="container text-center">
        <!-- Signup Form Container -->
        <div class="course-create row align-items-center offset-3 course-card" style="margin-top: 5rem;">
            <!-- Signup Form -->
            <form method="post" action="/faculty/signup" class="needs-validation col" novalidate>
                <h2>Signup</h2>
                
                <!-- Name Input -->
                <div class="mb-3">
                    <label for="name" class="form-label"></label>
                    <input name="name" id="name" class="form-control" placeholder="name" type="text" required>
                    <div class="invalid-feedback">
                        Please enter correct name
                    </div>
                </div>
                
                <!-- Email Input -->
                <div class="mb-3">
                    <label for="email" class="form-label"></label>
                    <input name="email" id="email" class="form-control" placeholder="email" type="email" required>
                    <div class="invalid-feedback">
                        Please enter correct email
                    </div>
                </div>
                
                <!-- Username Input -->
                <div class="mb-3">
                    <label for="username" class="form-label"></label>
                    <input id="username" name="username" class="form-control" placeholder="username" type="text" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
                
                <!-- Password Input -->
                <div class="mb">
                    <label for="password" class="form-label"></label>
                    <input id="password" name="password" class="form-control" placeholder="password" type="password" required>
                </div>
                <br>
                
                <!-- Department Selection Dropdown -->
                <div class="mb-3 row">
                    <label for="dept" class="form-label">Department</label>
                    <select name="dept" id="dept">
                        <option value="cse">CSE</option>
                        <option value="cse-ds">CSE-DS</option>
                        <option value="cse-cs">CSE-CS</option>
                        <option value="cse-aiml">CSE-AIML</option>
                    </select>
                </div>
                
                <!-- Submit Button -->
                <button type="submit" class="btn btn-dark btn-add mt-3">Signup</button>
            </form>
        </div>
    </div>
</body>
