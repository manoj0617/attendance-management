<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Attendance Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --mischka: #d0cede;
            --deep-blue: #12047a;
            --kimberly: #6c679c;
            --manatee: #8484ac;
            --amethyst-smoke: #8c8cb4;
            --victoria: #48488c;
            --minsk: #393987;
            --bay-of-many: #28287f;
            --deluge: #7464b4;
            --daisy-bush: #3c2c94;
        }

        body {
            background-color: var(--mischka);
            margin: 0;
            padding-top: 70px; /* Ensure content starts below fixed header */
        }

        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            display: flex;
            align-items: center;
            padding: 15px 40px;
            background-color: var(--mischka); /* Changed to a lighter color for logo visibility */
            color: var(--deep-blue);
            z-index: 1000; /* Ensure the header is above other content */
        }

        .header img {
            max-height: 40px;
            margin-right: 15px;
        }

        .header a {
            font-size: 1.5rem;
            color: var(--deep-blue);
            font-weight: bold;
            text-decoration: none;
        }

        .main-container {
            background-color: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 900px;
            margin: 20px auto; /* Center container horizontally */
        }

        .left-side {
            background-color: var(--deep-blue);
            color: white;
            padding: 40px;
            text-align: center;
        }

        .right-side {
            padding: 40px;
        }

        h1,
        h2,
        h3 {
            color: var(--deep-blue);
            font-weight: bold;
        }

        .role-selector {
            margin-bottom: 20px;
        }

        .form-control {
            border-color: var(--amethyst-smoke);
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: var(--daisy-bush);
            border-color: var(--daisy-bush);
        }

        .btn-primary:hover {
            background-color: var(--deep-blue);
            border-color: var(--deep-blue);
        }
    </style>
</head>

<body>
    <!-- Header with Geethanjali Logo -->
    <header class="header">
        <img src="images/logo.png" alt="Geethanjali Logo">
        <a href="/">Geethanjali</a>
    </header>

    <!-- Main Container -->
    <div class="container main-container mt-3">
        <div class="row">
            <div class="col-md-6 left-side">
                <img src="images/planning-schedule-concept-with-isometric-perspective.png"
                    alt="Attendance Management Illustration" class="img-fluid mt-4">
            </div>
            <div class="col-md-6 right-side">
                <h1>Login</h1>

                <!-- Role Selector -->
                <div class="role-selector">
                    <label class="form-label">Select Your Role:</label>
                    <div class="btn-group w-100" role="group" aria-label="Role selection">
                        <input type="radio" class="btn-check" name="role" id="adminRole" value="admin"
                            autocomplete="off" checked>
                        <label class="btn btn-outline-primary" for="adminRole">Admin</label>

                        <input type="radio" class="btn-check" name="role" id="teacherRole" value="faculty"
                            autocomplete="off">
                        <label class="btn btn-outline-primary" for="teacherRole">Teacher</label>

                        <input type="radio" class="btn-check" name="role" id="studentRole" value="student"
                            autocomplete="off">
                        <label class="btn btn-outline-primary" for="studentRole">Student</label>
                    </div>
                </div>

                <!-- Login Form -->
                <form id="loginForm" method="post" action="/admin/login">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="username" name="username"
                            placeholder="Enter Username" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Enter Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('input[name="role"]').forEach((radio) => {
            radio.addEventListener('change', function () {
                const form = document.getElementById('loginForm');
                form.action = `/${this.value}/login`;
            });
        });
    </script>
</body>

</html>
