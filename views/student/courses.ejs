<% layout("../layouts/studentBoilerplate") -%>

<body class="courses-body">
  <!-- Main Container -->
  <div class="main row">
    
    <!-- Student Details Section -->
    <div class="student-details">
      <h1><%= currUser.name %> - <%= currUser.username %></h1>
    </div>
    
    <!-- Ongoing Courses Section -->
    <div class="course-details">
      <h1>Ongoing Courses:</h1>
      <div class="course-cards">
        <!-- Loop through each course and display it -->
        <% for (course of courses) { %>
          <div class="card col-md-3 course-card">
            <div class="card-body">
              <h2><%= course.course %></h2>
              <h4 class="card-subtitle mb-2 text-body-primary">Faculty - <%= course.faculty.name %></h4>
              <div class="button-container">
                <a href="/student/courses/<%= course._id %>">
                  <button class="btn btn-dark course-btn">
                    Click here
                  </button>
                </a>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- Attendance Details Section -->
    <div class="attendance-details">
      <!-- Average Attendance Record -->
      <div class="average-attendance">
        <h2>Average Attendance Record</h2>
        <div class="circle" id="circle">
          <span id="percentage-text"><h1><%= percentage %> %</h1></span>
        </div>
      </div>

      <!-- Eligibility Status -->
      <div class="eligibility-status">
        <% if (percentage > 75) { %>
          <h3 class="eligible">Eligible (Eligibility cut-off 75%)</h3>
        <% } else { %>
          <h3 class="not-eligible">Not Eligible (Eligibility cut-off 75%)</h3>
        <% } %>
      </div>
    </div>
  </div>
</body>
